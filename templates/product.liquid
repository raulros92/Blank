<h1>{{product.title}}</h1>
<h1>{{product.price |  money}}</h1>
<div>
    {{product.description}}
</div>

{%form "product", product%}
    <select name="id">
        {% for variant in product.variants %}
            <option value = {{variant.id}}>
                {{variant.title}}
            </option>
        {% endfor %}
    </select>

    <button type="submit">{{"general.add_to_cart" | t}}</button>
{% endform %}