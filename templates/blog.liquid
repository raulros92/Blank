{%paginate blog.articles by 4%}

    <h1>{{blog.title}}</h1>

    {%for article in blog.articles%}
        <div class="article">
            <a href="{{article.url}}">
                <h2>{{article.title}}</h2>
                <h4>{{article.author}}</h4>
                <h6>{{article.excerpt}}</h6>
            </a>
        </div>
    {%endfor%}

    {{paginate | default_pagination}}
    
{%endpaginate%}