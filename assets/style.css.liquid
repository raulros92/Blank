body {
    background-image: url({{ 'puppy.jpg' | asset_url }});
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    background-attachment: fixed;
}

.h1ClickToRemove {
    color: red;
    font-size: 50px;
    text-align: center;
}

.codingRaul {
    color: blue;
    font-size: 50px;
    text-align: center;
}

.shopName {
    color: yellow;
    font-size: 50px;
    text-align: center;
}

.mainMenu {
    list-style: none;
    display: flex;
    justify-content: center;
    background-color: {{ settings.bg }};
    padding: 10px;
}

.mainMenu li {
    margin: 0 20px;
    font-size: 50px;
}

.mainMenu a {
    text-decoration: none;
    color: #whitesmoke;
    font-weight: bold;
    padding: 5px;
    border-radius: 5px;
}

.miColeccion {
    display: flex;
    justify-content: center; /* Centra horizontalmente los elementos */
    align-items: center; /* Centra verticalmente los elementos */
    text-align: center; 
}

.miColeccion > * {
    margin: 0 20px;
}
